{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h2>You successfully authenticated</h2>
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}
        </div>
        <a href="{{ path('appLogout') }}" style="display:inline-block;background:#fff;padding:6px 12px;border:1px solid #ccc;border-radius:4px;text-decoration:none;color:#333">Logout</a>    {% endif %}
{% endblock %}
