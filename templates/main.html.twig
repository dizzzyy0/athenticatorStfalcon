{% extends 'base.html.twig' %}

{% block title %}User profile{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>User profile</h1>
        <div class="text-center">
            {% if app.user.totpAuthenticationEnabled %}
                <div class="text-center">
                    <img src="{{ path('create-qr', {'id': app.user.id }) }}" alt="QR-code for authentication" width="300" height="300" class="mt-3">
                </div>

                <button class="btn btn-danger w-auto mt-4" data-bs-toggle="modal" data-bs-target="#disable2FAModal">
                    Disable 2FA
                </button>
            {% else %}
                <button class="btn btn-success w-auto mt-4" data-bs-toggle="modal" data-bs-target="#disable2FAModal">
                    Enable 2FA
                </button>
            {% endif %}
        </div>
        <a href="{{ path('app-logout') }}" class="btn btn-danger w-auto mt-4">Logout</a>

        <div class="modal fade" id="disable2FAModal" tabindex="-1" aria-labelledby="disable2FAModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    {% set formAction = app.user.totpAuthenticationEnabled ? path('tow-factor-auth-disable') : path('tow-factor-auth-enable') %}
                    <form method="post" action="{{ formAction }}">

                        <div class="modal-header">
                            <h5 class="modal-title" id="disable2FAModalLabel">Confirm password</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрити"></button>
                        </div>
                        <div class="modal-body">
                            <p>To disable two-factor authentication, enter your password:</p>
                            <label>
                                <input type="password" id="password" name="password" class="form-control" required>
                            </label>
                            <label>
                                <input type="hidden" id="id" name="id" class="form-control" value="{{ app.user.id }}">
                            </label>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            {% set buttonClass = app.user.totpAuthenticationEnabled ? 'btn-danger' : 'btn-success' %}
                            {% set buttonText = app.user.totpAuthenticationEnabled ? 'Disable 2FA' : 'Enable 2FA' %}
                            <button type="submit" class="btn {{ buttonClass }}">{{ buttonText }}</button>
                        </div>
                        <input type="hidden" name="_token" value="{{ csrf_token('disable_2fa') }}">
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
