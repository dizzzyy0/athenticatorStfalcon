{% extends 'base.html.twig' %}

{% block title %}{{ 'login.twig.login_form' | trans }}{% endblock %}

{% block body %}
    <form method="post" action="{{ path('login') }}">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey }}</div>
        {% endif %}


        <h1 class="h3 mb-3 font-weight-normal">{{ 'login.twig.please_sign_in' | trans }}</h1>
        <label for="username">{{ 'general_twig.email' | trans }}</label>
        <input type="email" value="{{ lastUsername }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        <label for="password">{{ 'general_twig.password' | trans }}</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>

        <p>{{ 'general_twig.does_not_have_account' | trans}} <a href="{{ path('register') }}">{{ 'register.twig.register' | trans }}</a></p>

    </form>
{% endblock %}
