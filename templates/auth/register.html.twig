{% extends 'base.html.twig'%}

{% block title %} Register {% endblock %}

{% block body %}
    <form action="{{ path('registerProcess') }}" method="post">

        <h1 class="h3 mb-3 front-weight-normal">Please register</h1>
        <label for="email">Email</label>
        <input type="email" name="email" id="email" class="form-control" placeholder="Email" required autofocus>

        <label for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>

        <label for="passwordConfirm">Confirm password</label>
        <input type="password" name="passwordConfirm" id="passwordConfirm" class="form-control" placeholder="Confirm password" required>

        <p>Already have account? <a href="{{ path('login') }}">Login</a></p>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>

    </form>
{% endblock %}
